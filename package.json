{
  "name": "top-foundations-calculator",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules --require=./suppress-experimental-warnings.cjs node_modules/jest/bin/jest.js --coverage --config=jest.config.js",
    "test:unit": "npm run test",
    "test:e2e": "playwright test",
    "serve": "http-server",
    "lint": "eslint src/**/*.ts",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security-check": "npm audit --audit-level=moderate",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "check-deps": "depcheck",
    "update-deps": "ncu -u && npm install",
    "ci": "npm run lint && npm run type-check && npm run test && npm run security-check"
  },
  "pre-commit": [
    "lint-staged",
    "type-check",
    "test",
    "security-check"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.46.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "npm-check-updates": "^17.0.6",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
